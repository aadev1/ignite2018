{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "sourceVaultName": {
            "type": "string",
            "defaultValue": "bmoore-msft"
        },
        "destVaultName": {
            "type": "string",
            "defaultValue": "bmoore-msft2"
        },
        "sourceVaultResourceGroupName": {
            "type": "string",
            "defaultValue": "VaultsGroup"
        },
        "sourceSecretNamePrefix": {
            "type": "string",
            "defaultValue": "s"
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The base URI where artifacts required by this template are located. When the template is deployed using the accompanying scripts, a private location in the subscription will be used and this value will be automatically generated."
            },
            "defaultValue": ""
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "The sasToken required to access _artifactsLocation.  When the template is deployed using the accompanying scripts, a sasToken will be automatically generated."
            },
            "defaultValue": ""
        }
    },
    "resources": [
        {
            "apiVersion": "2018-05-01",
            "name": "[concat('nested', copyIndex())]",
            "type": "Microsoft.Resources/deployments",
            "resourceGroup": "[parameters('sourceVaultResourceGroupName')]",
            "copy": {
                "count": 50,
                "name": "loop"
            },
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "contentVersion": "1.0.0.0",
                    "uri": "[concat(parameters('_artifactsLocation'), 'KeyVaultAddSecret.json', parameters('_artifactsLocationSasToken'))]"
                },
                "parameters": {
                    "keyVaultName": {
                        "value": "[parameters('destVaultName')]"
                    },
                    "secretName": {
                        "value": "[concat(parameters('sourceSecretNamePrefix'), copyIndex())]"
                    },
                    "secretValue": {
                        "reference": {
                            "keyVault": {
                                "id": "[resourceId(parameters('sourceVaultResourceGroupName'), 'Microsoft.KeyVault/vaults', parameters('sourceVaultName'))]"
                            }, 
                            "secretName": "[concat(parameters('sourceSecretNamePrefix'), copyIndex())]"
                        }
                    }
                }
            }
        }
    ],
    "outputs": {
        "dump": {
            "type": "string",
            "value": "dump"
        }
    }
}